# HOTKEYS

# Show all commands
# [Ctrl-Shift-q]
"xbindkeys_show"
  control + shift + q

# => Start rofi (a program launcher)
#bindsym Ctrl+F7      exec $HOME/.config/rofi/scripts/xrandrmenu.sh
#bindsym Ctrl+F8      exec $HOME/.config/rofi/scripts/i3layoutmenu.sh
#bindsym Ctrl+F9      exec $HOME/.config/rofi/scripts/rofi-wifi-menu-plus-plus/rofi_wifi_menu.sh

"killall rofi; exec notify-send 'Restart rofi'"
    Mod4 + control + d
"rofi -show window"
    Mod4 + Tab
"rofi -show drun -columns 3"
    Mod4 + d
"rofi -show run -columns 3"
    Mod4 + shift + d
"$HOME/.config/rofi/scripts/shutdown-menu/shutdown-menu.sh"
    Mod4 + shift + p

# Open terminal
# [Super-Return]
# i3-sensible-terminal or termite
"termite"
    Mod4 + Return

# start file manager
# ranger、pcmanfm or thunar
"pcmanfm"
    Mod4 + F3

# Open web browser
# [Super-F2]
"google-chrome-stable"
    Mod4 + F2

## Screen shot
## [Print Screen]
"flameshot gui --delay 200"
    Print
"flameshot config"
    Mod4 + shift + Print

#sound
"urxvt -e 'alsamixer'"
    Mod4 + control + m

# playerctl
"playerctl previous"
    Mod4 + Home
"playerctl next"
    Mod4 + End
"playerctl play-pause"
    Mod4 + Delete
"playerctl stop"
    Mod4 + Insert

#"xdg-open /usr/share/doc/manjaro/i3_help.pdf"
#    Mod4 + F1

"xkill"
    Mod4 + control + x

# launch categorized menu
"morc_menu"
    Mod4 + z
"urxvt -e 'bmenu'"
    Mod4 + control + b

#伪平铺特性
#
#                         q w e            LeftTop        Max        RightTop
#      super + shift +:   a s d    ===>    Left          Center         Right
#                         z x c            LeftBottom    unMax    RightBottom
#
"$HOME/.local/bin/window.sh LT"
    control + shift + q
"$HOME/.local/bin/window.sh M"
    control + shift + w
"$HOME/.local/bin/window.sh RT"
    control + shift + e
"$HOME/.local/bin/window.sh L"
    control + shift + a
"$HOME/.local/bin/window.sh C"
    control + shift + s
"$HOME/.local/bin/window.sh R"
    control + shift + d
"$HOME/.local/bin/window.sh LB"
    control + shift + z
"$HOME/.local/bin/window.sh U"
    control + shift + x
"$HOME/.local/bin/window.sh RB"
    control + shift + c


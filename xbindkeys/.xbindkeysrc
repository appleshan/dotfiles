# HOTKEYS

# Show all commands
# [Ctrl-Shift-q]
"xbindkeys_show"
  control + shift + q

# => Start rofi (a program launcher)
#bindsym Ctrl+F7      exec $HOME/.config/rofi/scripts/xrandrmenu.sh
#bindsym Ctrl+F8      exec $HOME/.config/rofi/scripts/i3layoutmenu.sh
#bindsym Ctrl+F9      exec $HOME/.config/rofi/scripts/rofi-wifi-menu-plus-plus/rofi_wifi_menu.sh

"killall rofi; exec notify-send 'Restart rofi'"
    Mod4 + control + d
"rofi -show window"
    Mod4 + Tab
"rofi -show drun"
    Mod4 + d
"rofi -show run"
    Mod4 + shift + d
"$HOME/.config/rofi/scripts/powermenu.sh"
    Mod4 + shift + p

# Open terminal
# [Super-Return]
# i3-sensible-terminal or termite
"termite"
    Mod4 + Return

# start file manager
# ranger„ÄÅpcmanfm or thunar
"pcmanfm"
    Mod4 + F3

# Open web browser
# [Super-F2]
"google-chrome-stable"
    Mod4 + F2

## Screen shot
## [Print Screen]
"flameshot gui --delay 200"
    Print
"flameshot config"
    Mod4 + shift + Print

#sound
bindsym $mod+Ctrl+m exec urxvt -e 'alsamixer'
"urxvt -e 'alsamixer'"
    Mod4 + control + m

#"xdg-open /usr/share/doc/manjaro/i3_help.pdf"
#    Mod4 + F1

"xkill"
    Mod4 + control + x

# launch categorized menu
"morc_menu"
    Mod4 + z
"urxvt -e 'bmenu'"
    Mod4 + control + b


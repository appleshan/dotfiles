# CVE-2016-0777
UseRoaming no

Host *
  # Enable connection sharing.
  ControlMaster auto
  ControlPath /tmp/ssh/ssh-socks-%r@%h:%p
  # Make persistent connections that can be reused.
  ControlPersist 4h
  # Keep connections alive (helps TRAMP to detect disconnects.)
  KeepAlive yes
  ServerAliveInterval 5
  Compression yes

  #关闭 ssh 的 gssapi 认证
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials no

#Default Git
# https://github.com/appleshan/
Host github.com
  HostName github.com
  User appleshan
  IdentityFile ~/.ssh/id_rsa_github

#Second Git
Host bitbucket.org
  HostName bitbucket.org
  User appleshan
  IdentityFile ~/.ssh/bitbucket

# https://gitlab.hytto.com:16666/
Host gitlab.hytto.com
  HostName gitlab.hytto.com
  User alecshan
  IdentityFile ~/.ssh/id_rsa_lovense

